CREATE USER LP2GX IDENTIFIED BY "1234567";
GRANT ALL PRIVILEGES TO LP2GX;
GRANT EXECUTE ANY PROCEDURE TO LP2GX;
GRANT UNLIMITED TABLESPACE TO LP2GX;

CREATE TABLE CATEGORIA (
   IDCATEGORIA NUMBER(10) NOT NULL,
   NOMBRE VARCHAR(50) NOT NULL,
   ESTADO CHAR(1) NOT NULL,
   CONSTRAINT PK_IDCATEGORIA
   PRIMARY KEY (IDCATEGORIA)   
);
CREATE SEQUENCE SEQ_CATEGORIA;
CREATE TABLE PRODUCTO(
    IDPRODUCTO NUMBER(10) NOT NULL,
    NOMBRE VARCHAR(50) NOT NULL,
    PRECIO NUMBER(10,2) NOT NULL,
    CANTIDAD NUMBER(10) NOT NULL,
    ESTADO CHAR(1) NOT NULL,
    IDCATEGORIA NUMBER(10) NOT NULL,
    CONSTRAINT PK_IDPRODUCTO PRIMARY KEY (IDPRODUCTO),
    CONSTRAINT FK_IDCATEGORIA FOREIGN KEY (IDCATEGORIA) REFERENCES CATEGORIA (IDCATEGORIA)
);
CREATE SEQUENCE SEQ_PRODUCTO;
INSERT INTO CATEGORIA(IDCATEGORIA,NOMBRE,ESTADO) VALUES(SEQ_CATEGORIA.NEXTVAL,'LACTEOS','1');
INSERT INTO PRODUCTO(IDPRODUCTO,NOMBRE,PRECIO,CANTIDAD, ESTADO, IDCATEGORIA) VALUES(SEQ_PRODUCTO.NEXTVAL,'LECHE GLORIA',4.5,10,'1',1);